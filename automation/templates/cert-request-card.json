{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "Weld Certification Request",
      "weight": "Bolder",
      "size": "Large",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Step 2 of 2 \u2014 Select employee and configure test coupons.",
      "wrap": true,
      "spacing": "None",
      "isSubtle": true
    },
    {
      "type": "FactSet",
      "spacing": "Large",
      "separator": true,
      "facts": [
        {
          "title": "Job",
          "value": "${job_display}"
        },
        {
          "title": "WPS",
          "value": "${wps_display}"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Employee",
      "weight": "Bolder",
      "size": "Medium",
      "spacing": "Large",
      "separator": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "employee_number",
      "label": "Select Employee",
      "placeholder": "Search by name or employee number...",
      "style": "filtered",
      "choices": "${employee_choices}",
      "isRequired": false
    },
    {
      "type": "ColumnSet",
      "spacing": "Small",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.Text",
              "id": "employee_phone",
              "label": "Phone",
              "placeholder": "555-123-4567"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.Text",
              "id": "employee_email",
              "label": "Email",
              "placeholder": "name@company.com"
            }
          ]
        }
      ]
    },
    {
      "type": "ActionSet",
      "spacing": "Small",
      "actions": [
        {
          "type": "Action.ToggleVisibility",
          "title": "Employee not in system? Enter manually",
          "targetElements": [
            {
              "elementId": "new_employee_panel",
              "isVisible": true
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "id": "new_employee_panel",
      "isVisible": false,
      "style": "emphasis",
      "items": [
        {
          "type": "TextBlock",
          "text": "New Employee",
          "weight": "Bolder",
          "spacing": "Small"
        },
        {
          "type": "Input.Text",
          "id": "new_emp_number",
          "label": "Employee Number",
          "placeholder": "e.g. 12345"
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "new_emp_first_name",
                  "label": "First Name",
                  "placeholder": "First"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "new_emp_last_name",
                  "label": "Last Name",
                  "placeholder": "Last"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Test Coupons",
      "weight": "Bolder",
      "size": "Medium",
      "spacing": "Large",
      "separator": true
    },
    {
      "type": "TextBlock",
      "text": "Material and process are determined by the selected WPS. Configure size for each coupon.",
      "wrap": true,
      "spacing": "None",
      "isSubtle": true,
      "size": "Small"
    },
    {
      "type": "TextBlock",
      "text": "Coupon 1",
      "weight": "Bolder",
      "spacing": "Medium"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.ChoiceSet",
              "id": "c1_type",
              "label": "Type",
              "value": "pipe",
              "choices": [
                {"title": "Pipe", "value": "pipe"},
                {"title": "Plate", "value": "plate"},
                {"title": "Tube", "value": "tube"}
              ]
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.ChoiceSet",
              "id": "c1_size",
              "label": "Size",
              "value": "2",
              "choices": [
                {"title": "2\"", "value": "2"},
                {"title": "6\"", "value": "6"}
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "ActionSet",
      "spacing": "Small",
      "actions": [
        {
          "type": "Action.ToggleVisibility",
          "title": "+ Add Coupon 2",
          "targetElements": ["coupon_2_panel"]
        },
        {
          "type": "Action.ToggleVisibility",
          "title": "+ Add Coupon 3",
          "targetElements": ["coupon_3_panel"]
        },
        {
          "type": "Action.ToggleVisibility",
          "title": "+ Add Coupon 4",
          "targetElements": ["coupon_4_panel"]
        }
      ]
    },
    {
      "type": "Container",
      "id": "coupon_2_panel",
      "isVisible": false,
      "items": [
        {
          "type": "TextBlock",
          "text": "Coupon 2",
          "weight": "Bolder",
          "spacing": "Medium",
          "separator": true
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.ChoiceSet",
                  "id": "c2_type",
                  "label": "Type",
                  "value": "pipe",
                  "choices": [
                    {"title": "Pipe", "value": "pipe"},
                    {"title": "Plate", "value": "plate"},
                    {"title": "Tube", "value": "tube"}
                  ]
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.ChoiceSet",
                  "id": "c2_size",
                  "label": "Size",
                  "value": "2",
                  "choices": [
                    {"title": "2\"", "value": "2"},
                    {"title": "6\"", "value": "6"}
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "id": "coupon_3_panel",
      "isVisible": false,
      "items": [
        {
          "type": "TextBlock",
          "text": "Coupon 3",
          "weight": "Bolder",
          "spacing": "Medium",
          "separator": true
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.ChoiceSet",
                  "id": "c3_type",
                  "label": "Type",
                  "value": "pipe",
                  "choices": [
                    {"title": "Pipe", "value": "pipe"},
                    {"title": "Plate", "value": "plate"},
                    {"title": "Tube", "value": "tube"}
                  ]
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.ChoiceSet",
                  "id": "c3_size",
                  "label": "Size",
                  "value": "2",
                  "choices": [
                    {"title": "2\"", "value": "2"},
                    {"title": "6\"", "value": "6"}
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "id": "coupon_4_panel",
      "isVisible": false,
      "items": [
        {
          "type": "TextBlock",
          "text": "Coupon 4",
          "weight": "Bolder",
          "spacing": "Medium",
          "separator": true
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.ChoiceSet",
                  "id": "c4_type",
                  "label": "Type",
                  "value": "pipe",
                  "choices": [
                    {"title": "Pipe", "value": "pipe"},
                    {"title": "Plate", "value": "plate"},
                    {"title": "Tube", "value": "tube"}
                  ]
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.ChoiceSet",
                  "id": "c4_size",
                  "label": "Size",
                  "value": "2",
                  "choices": [
                    {"title": "2\"", "value": "2"},
                    {"title": "6\"", "value": "6"}
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Notes",
      "weight": "Bolder",
      "size": "Medium",
      "spacing": "Large",
      "separator": true
    },
    {
      "type": "Input.Text",
      "id": "notes",
      "label": "Additional Notes",
      "placeholder": "Special instructions, scheduling preferences, etc.",
      "isMultiline": true
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit Request",
      "style": "positive",
      "data": {
        "action": "submit_cert_request"
      }
    }
  ]
}
