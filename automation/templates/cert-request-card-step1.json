{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "Weld Certification Request",
      "weight": "Bolder",
      "size": "Large",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Step 1 of 2 \u2014 Select the job site and welding procedures.",
      "wrap": true,
      "spacing": "None",
      "isSubtle": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "job_number",
      "label": "Job Number",
      "placeholder": "Search by number or name...",
      "style": "filtered",
      "choices": "${job_choices}",
      "isRequired": true,
      "spacing": "Large",
      "separator": true
    },
    {
      "type": "TextBlock",
      "text": "Welding Procedures",
      "weight": "Bolder",
      "size": "Medium",
      "spacing": "Large",
      "separator": true
    },
    {
      "type": "TextBlock",
      "text": "Select 1\u20135 WPS for this certification request.",
      "wrap": true,
      "spacing": "None",
      "isSubtle": true,
      "size": "Small"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "wps_1",
      "label": "WPS 1",
      "placeholder": "Search by WPS number...",
      "style": "filtered",
      "choices": "${wps_choices}",
      "isRequired": true
    },
    {
      "type": "ActionSet",
      "spacing": "Small",
      "actions": [
        {
          "type": "Action.ToggleVisibility",
          "title": "+ WPS 2",
          "targetElements": ["wps_2_panel"]
        },
        {
          "type": "Action.ToggleVisibility",
          "title": "+ WPS 3",
          "targetElements": ["wps_3_panel"]
        },
        {
          "type": "Action.ToggleVisibility",
          "title": "+ WPS 4",
          "targetElements": ["wps_4_panel"]
        },
        {
          "type": "Action.ToggleVisibility",
          "title": "+ WPS 5",
          "targetElements": ["wps_5_panel"]
        }
      ]
    },
    {
      "type": "Container",
      "id": "wps_2_panel",
      "isVisible": false,
      "items": [
        {
          "type": "Input.ChoiceSet",
          "id": "wps_2",
          "label": "WPS 2",
          "placeholder": "Search by WPS number...",
          "style": "filtered",
          "choices": "${wps_choices}"
        }
      ]
    },
    {
      "type": "Container",
      "id": "wps_3_panel",
      "isVisible": false,
      "items": [
        {
          "type": "Input.ChoiceSet",
          "id": "wps_3",
          "label": "WPS 3",
          "placeholder": "Search by WPS number...",
          "style": "filtered",
          "choices": "${wps_choices}"
        }
      ]
    },
    {
      "type": "Container",
      "id": "wps_4_panel",
      "isVisible": false,
      "items": [
        {
          "type": "Input.ChoiceSet",
          "id": "wps_4",
          "label": "WPS 4",
          "placeholder": "Search by WPS number...",
          "style": "filtered",
          "choices": "${wps_choices}"
        }
      ]
    },
    {
      "type": "Container",
      "id": "wps_5_panel",
      "isVisible": false,
      "items": [
        {
          "type": "Input.ChoiceSet",
          "id": "wps_5",
          "label": "WPS 5",
          "placeholder": "Search by WPS number...",
          "style": "filtered",
          "choices": "${wps_choices}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Next \u2192",
      "style": "positive",
      "data": {
        "action": "select_job_and_wps"
      }
    }
  ]
}
