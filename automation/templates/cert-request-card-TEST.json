{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "Weld Certification Request",
      "weight": "Bolder",
      "size": "Large",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Submit a new weld cert test request. Select the project, choose an employee, pick the WPS, then add up to 4 test coupons.",
      "wrap": true,
      "spacing": "None",
      "isSubtle": true
    },
    {
      "type": "TextBlock",
      "text": "Project",
      "weight": "Bolder",
      "size": "Medium",
      "spacing": "Large",
      "separator": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "project_number",
      "label": "Project",
      "placeholder": "Search by number or name...",
      "style": "filtered",
      "choices": [
        {
          "title": "07645 - Cold Storage Facility",
          "value": "07645"
        },
        {
          "title": "07650 - Distribution Center",
          "value": "07650"
        },
        {
          "title": "07660 - Process Plant Expansion",
          "value": "07660"
        },
        {
          "title": "07670 - Ammonia Engine Room",
          "value": "07670"
        }
      ],
      "isRequired": true
    },
    {
      "type": "TextBlock",
      "text": "Employee",
      "weight": "Bolder",
      "size": "Medium",
      "spacing": "Large",
      "separator": true
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.ToggleVisibility",
          "title": "Select Employee",
          "targetElements": [
            {
              "elementId": "existing_employee_panel",
              "isVisible": true
            },
            {
              "elementId": "new_employee_panel",
              "isVisible": false
            }
          ]
        },
        {
          "type": "Action.ToggleVisibility",
          "title": "New Employee",
          "targetElements": [
            {
              "elementId": "existing_employee_panel",
              "isVisible": false
            },
            {
              "elementId": "new_employee_panel",
              "isVisible": true
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "id": "existing_employee_panel",
      "isVisible": true,
      "items": [
        {
          "type": "Input.ChoiceSet",
          "id": "employee_number",
          "label": "Employee",
          "placeholder": "Search by name or employee number...",
          "style": "filtered",
          "choices": [
            {
              "title": "10042 - Mike Rodriguez",
              "value": "10042"
            },
            {
              "title": "10088 - James Wilson",
              "value": "10088"
            },
            {
              "title": "10103 - Carlos Hernandez",
              "value": "10103"
            },
            {
              "title": "10115 - David Thompson",
              "value": "10115"
            },
            {
              "title": "10127 - Robert Garcia",
              "value": "10127"
            },
            {
              "title": "10134 - Sarah Mitchell",
              "value": "10134"
            },
            {
              "title": "10156 - Antonio Reyes",
              "value": "10156"
            }
          ],
          "isRequired": false
        }
      ]
    },
    {
      "type": "Container",
      "id": "new_employee_panel",
      "isVisible": false,
      "items": [
        {
          "type": "Input.Text",
          "id": "new_welder_emp_number",
          "label": "Employee Number",
          "placeholder": "e.g. 12345",
          "isRequired": false
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "new_welder_first_name",
                  "label": "First Name",
                  "placeholder": "First",
                  "isRequired": false
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "new_welder_last_name",
                  "label": "Last Name",
                  "placeholder": "Last",
                  "isRequired": false
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Welding Procedure",
      "weight": "Bolder",
      "size": "Medium",
      "spacing": "Large",
      "separator": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "wps_number",
      "label": "WPS",
      "placeholder": "Search by WPS number or title...",
      "style": "filtered",
      "choices": [
        {
          "title": "WPS-001 - CS Groove SMAW (A106 / 7018)",
          "value": "WPS-001"
        },
        {
          "title": "WPS-002 - CS Groove GTAW/SMAW (A106 / ER70S+7018)",
          "value": "WPS-002"
        },
        {
          "title": "WPS-003 - SS Groove GTAW (A312 / ER308)",
          "value": "WPS-003"
        },
        {
          "title": "WPS-004 - CS Fillet SMAW (A53 / 7018)",
          "value": "WPS-004"
        },
        {
          "title": "WPS-005 - SS Fillet GTAW (A240 / ER316)",
          "value": "WPS-005"
        }
      ],
      "isRequired": true
    },
    {
      "type": "TextBlock",
      "text": "Process, base material, and filler metal are determined by the selected WPS. Position is 6G for all coupons.",
      "wrap": true,
      "spacing": "None",
      "isSubtle": true,
      "size": "Small"
    },
    {
      "type": "TextBlock",
      "text": "Coupon 1",
      "weight": "Bolder",
      "size": "Medium",
      "spacing": "Large",
      "separator": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.Text",
              "id": "c1_thickness",
              "label": "Thickness",
              "placeholder": "e.g. 3/4\""
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.Text",
              "id": "c1_diameter",
              "label": "Diameter",
              "placeholder": "e.g. 6\""
            }
          ]
        }
      ]
    },
    {
      "type": "ActionSet",
      "spacing": "Medium",
      "actions": [
        {
          "type": "Action.ToggleVisibility",
          "title": "+ Add Coupon 2",
          "targetElements": [
            "coupon_2_panel"
          ]
        },
        {
          "type": "Action.ToggleVisibility",
          "title": "+ Add Coupon 3",
          "targetElements": [
            "coupon_3_panel"
          ]
        },
        {
          "type": "Action.ToggleVisibility",
          "title": "+ Add Coupon 4",
          "targetElements": [
            "coupon_4_panel"
          ]
        }
      ]
    },
    {
      "type": "Container",
      "id": "coupon_2_panel",
      "isVisible": false,
      "items": [
        {
          "type": "TextBlock",
          "text": "Coupon 2",
          "weight": "Bolder",
          "size": "Medium",
          "spacing": "Medium",
          "separator": true
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "c2_thickness",
                  "label": "Thickness",
                  "placeholder": "e.g. 3/4\""
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "c2_diameter",
                  "label": "Diameter",
                  "placeholder": "e.g. 6\""
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "id": "coupon_3_panel",
      "isVisible": false,
      "items": [
        {
          "type": "TextBlock",
          "text": "Coupon 3",
          "weight": "Bolder",
          "size": "Medium",
          "spacing": "Medium",
          "separator": true
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "c3_thickness",
                  "label": "Thickness",
                  "placeholder": "e.g. 3/4\""
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "c3_diameter",
                  "label": "Diameter",
                  "placeholder": "e.g. 6\""
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "id": "coupon_4_panel",
      "isVisible": false,
      "items": [
        {
          "type": "TextBlock",
          "text": "Coupon 4",
          "weight": "Bolder",
          "size": "Medium",
          "spacing": "Medium",
          "separator": true
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "c4_thickness",
                  "label": "Thickness",
                  "placeholder": "e.g. 3/4\""
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "c4_diameter",
                  "label": "Diameter",
                  "placeholder": "e.g. 6\""
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Notes",
      "weight": "Bolder",
      "size": "Medium",
      "spacing": "Large",
      "separator": true
    },
    {
      "type": "Input.Text",
      "id": "notes",
      "label": "Additional Notes",
      "placeholder": "Special instructions, scheduling preferences, etc.",
      "isMultiline": true
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit Request",
      "style": "positive",
      "data": {
        "action": "submit_cert_request"
      }
    }
  ]
}